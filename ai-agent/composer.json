{
    "name": "ecigdis/php-ai-agent",
    "description": "Production-Grade PHP AI Agent with OpenAI Responses + Realtime APIs, Enhanced Memory, and Knowledge Base for Cloudways",
    "type": "project",
    "license": "proprietary",
    "require": {
        "php": ">=8.1",
        "ext-curl": "*",
        "ext-fileinfo": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "ext-pdo": "*",
        "ext-pdo_mysql": "*",
        "ext-redis": "*",
        "guzzlehttp/guzzle": "^7.10",
        "monolog/monolog": "^3.5",
        "ramsey/uuid": "^4.7",
        "vlucas/phpdotenv": "^5.6"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.10",
        "phpunit/phpunit": "^10.5",
        "squizlabs/php_codesniffer": "^4.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test:coverage": "vendor/bin/phpunit --coverage-html=tests/coverage --coverage-text",
        "test:coverage-check": "vendor/bin/phpunit --coverage-text && php -r 'exit(0);'",
        "cs": "vendor/bin/phpcs",
        "cs-fix": "vendor/bin/phpcbf",
        "analyse": "vendor/bin/phpstan analyse -c phpstan.neon.dist",
        "dev-check": "php bin/dev-check.php",
        "qa": [
            "@cs",
            "@analyse",
            "@test"
        ],
        "ci": [
            "@cs",
            "@analyse",
            "@test:coverage-check"
        ]
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true,
        "platform": {
            "php": "8.1"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
