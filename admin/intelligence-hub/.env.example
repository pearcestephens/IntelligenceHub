# Intelligence Hub Configuration

# Application
APP_ENV=development
APP_DEBUG=true

# Database
DB_HOST=localhost
DB_NAME=cis_database
DB_USER=your_username
DB_PASS=your_password

# OpenAI API
OPENAI_API_KEY=sk-your-openai-api-key-here

# Vend API
VEND_API_URL=https://yourdomain.vendhq.com/api/2.0
VEND_API_TOKEN=your_vend_api_token

# Xero API
XERO_CLIENT_ID=your_xero_client_id
XERO_CLIENT_SECRET=your_xero_client_secret
XERO_TENANT_ID=your_xero_tenant_id

# Deputy API
DEPUTY_API_TOKEN=your_deputy_api_token
DEPUTY_DOMAIN=https://yourdomain.deputy.com

# Logging
LOG_PATH=/var/log/intelligence-hub
LOG_LEVEL=INFO

# Security
SESSION_LIFETIME=3600
CSRF_TOKEN_NAME=_csrf_token

# Performance
CACHE_ENABLED=true
CACHE_TTL=300
