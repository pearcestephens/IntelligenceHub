{
  "version": "2.0.0",
  "enabled": true,
  "max_concurrent": 3,
  "default_timeout": 600,
  "alert_email": "admin@ecigdis.co.nz",
  "tasks": {
    "kb_intelligence_scan": {
      "name": "Intelligence Engine V2 - Full Scan",
      "enabled": true,
      "script": "scripts/kb_intelligence_engine_v2.php",
      "type": "interval",
      "interval": 14400,
      "priority": 1,
      "max_runtime": 600,
      "on_failure": "alert",
      "description": "Scans all files and extracts intelligence every 4 hours"
    },
    "ast_security_scan": {
      "name": "AST Security Scanner",
      "enabled": true,
      "script": "_kb/scripts/ast_security_scanner.php",
      "args": "-d . -o _kb/deep_intelligence/SECURITY_AST_DAILY.md",
      "type": "daily",
      "time": "03:00",
      "priority": 2,
      "max_runtime": 1800,
      "on_failure": "alert",
      "description": "Deep security analysis using AST parsing"
    },
    "call_graph_generator": {
      "name": "Call Graph Generator",
      "enabled": true,
      "script": "_kb/scripts/generate_call_graph.php",
      "args": "-d . -o _kb/intelligence/call_graph.json -m _kb/intelligence/CALL_GRAPH.md",
      "type": "interval",
      "interval": 21600,
      "priority": 3,
      "max_runtime": 900,
      "on_failure": "log",
      "description": "Generates function call graphs every 6 hours"
    },
    "enhanced_security_scan": {
      "name": "Enhanced Security Scanner",
      "enabled": true,
      "script": "scripts/enhanced_security_scanner.php",
      "args": "-d . -o _kb/deep_intelligence/SECURITY_VULNERABILITIES_V2.md",
      "type": "weekly",
      "day": 0,
      "time": "04:00",
      "priority": 2,
      "max_runtime": 3600,
      "on_failure": "alert",
      "description": "Comprehensive security audit weekly on Sunday"
    },
    "performance_analysis": {
      "name": "Performance Analyzer",
      "enabled": true,
      "script": "_kb/scripts/analyze_performance.php",
      "type": "daily",
      "time": "03:30",
      "priority": 4,
      "max_runtime": 600,
      "on_failure": "log",
      "description": "Analyzes system performance metrics"
    },
    "dead_code_detection": {
      "name": "Dead Code Detector",
      "enabled": true,
      "script": "_kb/scripts/detect_dead_code.php",
      "type": "weekly",
      "day": 0,
      "time": "05:00",
      "priority": 5,
      "max_runtime": 1200,
      "on_failure": "log",
      "description": "Identifies unused functions and files"
    },
    "relationship_mapping": {
      "name": "Relationship Mapper",
      "enabled": true,
      "script": "_kb/scripts/map_relationships.php",
      "type": "interval",
      "interval": 21600,
      "offset": 1800,
      "priority": 4,
      "max_runtime": 600,
      "on_failure": "log",
      "description": "Maps code dependencies and relationships"
    },
    "cache_cleanup": {
      "name": "KB Cache Cleanup",
      "enabled": true,
      "script": "_kb/scripts/cleanup_cache.php",
      "type": "daily",
      "time": "02:00",
      "priority": 6,
      "max_runtime": 300,
      "on_failure": "log",
      "description": "Removes cache files older than 7 days"
    },
    "log_rotation": {
      "name": "Log Rotation",
      "enabled": true,
      "script": "_kb/scripts/rotate_logs.php",
      "type": "daily",
      "time": "04:00",
      "priority": 6,
      "max_runtime": 300,
      "on_failure": "log",
      "description": "Compresses large log files"
    },
    "old_log_cleanup": {
      "name": "Old Log Cleanup",
      "enabled": true,
      "script": "_kb/scripts/cleanup_old_logs.php",
      "type": "weekly",
      "day": 1,
      "time": "03:00",
      "priority": 7,
      "max_runtime": 300,
      "on_failure": "log",
      "description": "Deletes compressed logs older than 30 days"
    },
    "kb_snapshots_cleanup": {
      "name": "KB Snapshots Cleanup",
      "enabled": true,
      "script": "_kb/scripts/cleanup_kb.php",
      "args": "--older-than=30",
      "type": "weekly",
      "day": 1,
      "time": "05:00",
      "priority": 7,
      "max_runtime": 600,
      "on_failure": "log",
      "description": "Removes KB snapshots older than 30 days"
    },
    "disk_space_check": {
      "name": "Disk Space Monitor",
      "enabled": true,
      "script": "_kb/scripts/check_disk_space.php",
      "type": "interval",
      "interval": 21600,
      "priority": 3,
      "max_runtime": 60,
      "on_failure": "alert",
      "description": "Monitors disk usage every 6 hours"
    },
    "error_log_summary": {
      "name": "Error Log Summary",
      "enabled": true,
      "script": "_kb/scripts/summarize_errors.php",
      "type": "daily",
      "time": "08:00",
      "priority": 5,
      "max_runtime": 300,
      "on_failure": "log",
      "description": "Daily error log analysis"
    },
    "cron_health_check": {
      "name": "Cron Health Check",
      "enabled": true,
      "script": "_kb/scripts/check_cron_health.php",
      "type": "interval",
      "interval": 43200,
      "priority": 4,
      "max_runtime": 60,
      "on_failure": "alert",
      "description": "Verifies cron jobs are running"
    },
    "daily_sync_to_cis": {
      "name": "Daily Intelligence Sync to CIS",
      "enabled": true,
      "script": "_kb/scripts/daily_sync_to_master.sh",
      "type": "daily",
      "time": "03:00",
      "priority": 2,
      "max_runtime": 1800,
      "on_failure": "alert",
      "description": "Syncs intelligence to CIS server daily"
    },
    "safe_neural_scanner": {
      "name": "Safe Neural Scanner",
      "enabled": true,
      "script": "scripts/safe_neural_scanner.php",
      "type": "daily",
      "time": "03:00",
      "priority": 3,
      "max_runtime": 1800,
      "on_failure": "log",
      "description": "Neural pattern analysis in safe mode"
    },
    "intelligence_distribution": {
      "name": "Intelligence Distribution to Satellites",
      "enabled": true,
      "script": "_kb/api/intelligence_distributor.php",
      "type": "interval",
      "interval": 14400,
      "offset": 600,
      "priority": 2,
      "max_runtime": 900,
      "on_failure": "alert",
      "description": "Distributes intelligence to remote servers every 4 hours"
    },
    "database_backup": {
      "name": "Database Backup",
      "enabled": true,
      "script": "_kb/scripts/backup_database.php",
      "type": "daily",
      "time": "01:00",
      "priority": 1,
      "max_runtime": 1800,
      "on_failure": "alert",
      "description": "Daily database backup with compression"
    },
    "mcp_health_check": {
      "name": "MCP Server Health Check",
      "enabled": true,
      "script": "_kb/scripts/check_mcp_status.php",
      "type": "interval",
      "interval": 3600,
      "priority": 3,
      "max_runtime": 30,
      "on_failure": "alert",
      "description": "Verifies MCP server is running and restarts if needed"
    },
    "api_health_check": {
      "name": "API Endpoints Health Check",
      "enabled": true,
      "script": "_kb/scripts/check_api_health.php",
      "type": "interval",
      "interval": 1800,
      "priority": 3,
      "max_runtime": 60,
      "on_failure": "alert",
      "description": "Tests all API endpoints every 30 minutes"
    },
    "ssh_session_detector": {
      "name": "SSH Session Detector",
      "enabled": true,
      "script": "_kb/scripts/ssh_session_detector.php",
      "type": "interval",
      "interval": 60,
      "priority": 2,
      "max_runtime": 30,
      "on_failure": "log",
      "description": "Detects active VS Code sessions and auto-starts file watcher daemon for real-time security monitoring"
    },
    "live_security_monitor": {
      "name": "Live Security Threat Monitor",
      "enabled": true,
      "script": "scripts/live_security_monitor.php",
      "type": "interval",
      "interval": 60,
      "priority": 1,
      "max_runtime": 55,
      "on_failure": "alert",
      "description": "Scans for security threats every 60 seconds: eval, exec, SQL injection, hardcoded credentials, etc."
    },
    "content_intelligence_processor": {
      "name": "Content Intelligence Processor",
      "enabled": true,
      "script": "scripts/content_intelligence_processor.php",
      "type": "interval",
      "interval": 3600,
      "priority": 3,
      "max_runtime": 600,
      "on_failure": "log",
      "description": "Deep analysis of content to populate intelligence_metrics, neural_patterns, predictions - runs hourly after scans"
    }
  }
}
