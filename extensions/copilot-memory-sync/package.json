{
  "name": "copilot-memory-sync",
  "displayName": "Copilot Memory Sync",
  "description": "Auto-sync GitHub Copilot conversations to Intelligence Hub database for persistent memory",
  "version": "1.0.0",
  "publisher": "ecigdis",
  "icon": "icon.png",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "copilotMemorySync.syncNow",
        "title": "Copilot Memory: Sync Now"
      },
      {
        "command": "copilotMemorySync.viewConversations",
        "title": "Copilot Memory: View History"
      },
      {
        "command": "copilotMemorySync.toggleAutoSync",
        "title": "Copilot Memory: Toggle Auto-Sync"
      }
    ],
    "configuration": {
      "title": "Copilot Memory Sync",
      "properties": {
        "copilotMemorySync.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable automatic conversation syncing"
        },
        "copilotMemorySync.apiEndpoint": {
          "type": "string",
          "default": "https://gpt.ecigdis.co.nz/api/conversation/save",
          "description": "Intelligence Hub API endpoint"
        },
        "copilotMemorySync.apiKey": {
          "type": "string",
          "default": "31ce0106609a6c5bc4f7ece0deb2f764df90a06167bda83468883516302a6a35",
          "description": "API authentication key"
        },
        "copilotMemorySync.projectId": {
          "type": "number",
          "default": 2,
          "description": "Project ID for conversation categorization"
        },
        "copilotMemorySync.businessUnitId": {
          "type": "number",
          "default": 2,
          "description": "Business Unit ID"
        },
        "copilotMemorySync.syncInterval": {
          "type": "number",
          "default": 30,
          "description": "Auto-sync interval in seconds (0 = immediate)"
        },
        "copilotMemorySync.minMessagesBeforeSync": {
          "type": "number",
          "default": 3,
          "description": "Minimum messages before auto-sync"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/node": "^20.x",
    "@typescript-eslint/eslint-plugin": "^6.x",
    "@typescript-eslint/parser": "^6.x",
    "eslint": "^8.x",
    "typescript": "^5.3.0",
    "@vscode/test-electron": "^2.3.0"
  },
  "dependencies": {
    "axios": "^1.6.0"
  }
}
