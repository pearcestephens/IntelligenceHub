# Logging
LOG_LEVEL=info
LOG_PATH=/home/master/applications/hdgwrzntwa/private_html/logs/mcp.log

# Security
CORS_ENABLED=true
CORS_ALLOWED_ORIGINS=https://gpt.ecigdis.co.nz,https://staff.vapeshed.co.nz
API_KEY_REQUIRED=false
