# MCP Intelligence Hub - Environment Configuration
# Copy this file to .env and update with your production values

# Database Configuration
DB_HOST=127.0.0.1
DB_PORT=3306
DB_NAME=hdgwrzntwa
DB_USER=hdgwrzntwa
DB_PASS=your_database_password_here
DB_CHARSET=utf8mb4

# Redis Configuration
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DATABASE=0
REDIS_TIMEOUT=2.5

# Cache Configuration
CACHE_ENABLED=true
CACHE_TTL=3600
CACHE_PREFIX=mcp_

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
