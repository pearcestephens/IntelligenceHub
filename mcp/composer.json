{
    "name": "intelligence-hub/mcp-server",
    "description": "Intelligence Hub MCP Server v3.0 - Professional PSR-12/18 Architecture",
    "type": "project",
    "version": "3.0.0",
    "license": "MIT",
    "authors": [
        {
            "name": "Intelligence Hub",
            "email": "dev@ecigdis.co.nz"
        }
    ],
    "require": {
        "php": ">=7.4",
        "ext-pdo": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "symfony/console": "^5.4",
        "monolog/monolog": "^2.9"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.6",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "IntelligenceHub\\MCP\\": "src/",
            "MCP\\Tools\\": "src/Tools/",
            "IntelligenceHub\\MCP\\CLI\\Commands\\": "cli/Commands/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "IntelligenceHub\\MCP\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "phpcs": "phpcs --standard=PSR12 src/",
        "phpcbf": "phpcbf --standard=PSR12 src/"
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
