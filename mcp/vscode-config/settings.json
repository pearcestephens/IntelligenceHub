{
  "github.copilot.enable": true,
  "github.copilot.advanced": {
    "debug.overrideEngine": "intelligence-hub-master",
    "debug.useNodeRuntime": true,
    "inlineSuggest.enable": true,
    "conversationMode": "enhanced"
  },
  "mcp.servers": {
    "intelligence-hub-master": {
      "type": "http",
      "url": "https://gpt.ecigdis.co.nz/mcp/server_v3.php",
      "enabled": true,
      "priority": 9999,
      "autoStart": true,
      "headers": {
        "Authorization": "Bearer 31ce0106609a6c5bc4f7ece0deb2f764df90a06167bda83468883516302a6a35",
        "X-Workspace-Root": "${workspaceFolder}",
        "X-Current-File": "${file}",
        "X-Auto-Log": "true"
