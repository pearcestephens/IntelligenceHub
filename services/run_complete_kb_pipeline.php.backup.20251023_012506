// Function to run a pipeline step
function runPipelineStep($stepNum, $stepInfo, $pipelineId) {
    global $totalSteps, $errors;
    
    echo "â”Œ" . str_repeat("â”€", 60) . "â”\n";
    echo "â”‚ STEP $stepNum/$totalSteps: {$stepInfo['name']}" . str_repeat(" ", 60 - strlen("STEP $stepNum/$totalSteps: {$stepInfo['name']}") - 2) . "â”‚\n";
    echo "â”‚ {$stepInfo['description']}" . str_repeat(" ", 60 - strlen($stepInfo['description']) - 2) . "â”‚\n";
    echo "â””" . str_repeat("â”€", 60) . "â”˜\n";
    
    $criticalStatus = $stepInfo['critical'] ? 'ğŸ”´ CRITICAL' : 'ğŸŸ¡ OPTIONAL';
    echo "Status: $criticalStatus | File: {$stepInfo['file']}\n";
    
    $stepStart = microtime(true);
    
    // Check if file exists
    $scriptPath = "/home/master/applications/hdgwrzntwa/public_html/scripts/{$stepInfo['file']}";
    if (!file_exists($scriptPath)) {
        echo "âŒ ERROR: Script not found at $scriptPath\n";
        if ($stepInfo['critical']) {
            $errors++;
            return false;
        } else {
            echo "âš ï¸  Skipping optional step\n\n";
            return true;
        }
    }
    
    echo "ğŸš€ Executing: php {$stepInfo['file']}\n";
    echo str_repeat("-", 60) . "\n";
    
    // Execute the script and capture output
    $command = "cd /home/master/applications/jcepnzzkmj/public_html/assets/services && php $scriptPath 2>&1";
    $output = [];
    $returnCode = 0;
    
    exec($command, $output, $returnCode);
    
    $stepTime = round(microtime(true) - $stepStart, 2);
    
    // Display condensed output
    $outputLines = count($output);
    echo "ğŸ“¤ Output: $outputLines lines\n";
    
    // Show last few lines of output
    $lastLines = array_slice($output, -5);
    foreach ($lastLines as $line) {
        echo "   $line\n";
    }
    
    if ($returnCode === 0) {
        echo "âœ… STEP $stepNum COMPLETED in {$stepTime}s\n\n";
        return true;
    } else {
        echo "âŒ STEP $stepNum FAILED (exit code: $returnCode) in {$stepTime}s\n";
        if ($stepInfo['critical']) {
            echo "ğŸš¨ CRITICAL STEP FAILED - Pipeline cannot continue\n\n";
            $errors++;
            return false;
        } else {
            echo "âš ï¸  Optional step failed - continuing pipeline\n\n";
            return true;
        }
    }
}

// Execute the complete pipeline
echo "ğŸ¯ STARTING COMPLETE KB PIPELINE EXECUTION\n";
