{
    "name": "vapeshed/security-scanner",
    "description": "Advanced Security & Code Quality Scanner v4.0",
    "type": "project",
    "license": "proprietary",
    "require": {
        "php": "^8.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "Scanner\\Lib\\": "lib/",
            "Scanner\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    }
}
