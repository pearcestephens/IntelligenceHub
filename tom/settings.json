      "default": true
    }
  },

  "// ===== Conversation Recording =====": "",
  "mcp.conversationRecording": {
    "enabled": true,
    "storage": "database",
    "includeContext": true,
    "includeTools": true,
    "anonymize": false
  },

  "// ===== Editor Integration =====": "",
  "editor.inlineSuggest.enabled": true,
  "github.copilot.enable": {
    "*": true,
    "yaml": true,
    "plaintext": true,
    "markdown": true,
    "php": true
  }
