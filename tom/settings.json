      "command": "node",
      "args": [
        "/home/129337.cloudwaysapps.com/hdgwrzntwa/public_html/mcp/mcp-server-wrapper.js"
      ],
      "env": {
        "MCP_SERVER_URL": "https://gpt.ecigdis.co.nz/mcp/server_v3.php",
